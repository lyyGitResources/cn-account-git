<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="contact">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message key="friend.contact.required"></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">40</param>
			<message key="friend.contact.required"></message>
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message key="email.required"></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">80</param>
			<message key="email.required"></message>
		</field-validator>
		<field-validator type="email">
			<message key="email.required"></message>
		</field-validator>
	</field>
	<field name="title">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message key="friend.title.required"></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">120</param>
			<message key="friend.title.required"></message>
		</field-validator>
	</field>
	<field name="linkType">
		<field-validator type="int">
			<param name="min">1</param>
			<param name="max">7</param>
			<message key="friend.linkType.required"></message>
		</field-validator>
	</field>
	<field name="brief">
		<field-validator type="stringlength">
			<param name="maxLength">500</param>
			<message key="friend.brief.maxlength"></message>
		</field-validator>
	</field>
</validators>
